<!DOCTYPE html>
<html>
  <head>
    <title>Sacmod Resource Library</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <% if Rails.env == "production" %>
      <!-- Global site tag (gtag.js) - Google Analytics -->
      <script async src="https://www.googletagmanager.com/gtag/js?id=UA-108428745-1"></script>
      <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'UA-108428745-1');
      </script>
    <% end %>

  </head>

  <body>
    <div class='text-center'>
      <%= image_tag "sacmod_logo.png" %>
    </div>
    <div class='navbar'>
      <div class="container">
        <div class='row'>
          <div class='col-sm-8'>
            <a href='http://sacmod.org'>Sacmod</a>
            <a href='/'>Library</a>
            <%= link_to("Admin", "/users/admin") if current_user %>
          </div>
          <% if user_signed_in? %>
            <div class='col-sm-4'>
              <%= link_to "Log out", destroy_user_session_path, method: :delete %>
              <%= link_to "Change password", edit_user_registration_path %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="container">
      <%= yield %>
    </div>

  </body>
</html>
