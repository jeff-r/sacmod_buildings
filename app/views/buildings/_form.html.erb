<%= form_with(model: building, local: true) do |form| %>
  <% if building.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(building.errors.count, "error") %> prohibited this building from being saved:</h2>

      <ul>
        <% building.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field row">
    <div class='col-sm-2'>
      Architect
    </div>
    <div class='col-sm-10'>
      <%= form.hidden_field :architect_id, value: building.architect_id %>
      <%= building.architect.name %>
    </div>
  </div>

  <div class="field row">
    <div class='col-sm-2'>
      Description
    </div>
    <div class='col-sm-10'>
      <%= form.text_area :description, id: :building_description %>
    </div>
  </div>

  <div class="field row">
    <div class='col-sm-2'>
      APN
    </div>
    <div class='col-sm-10'>
      <%= form.text_field :apn, id: :building_apn %>
    </div>
  </div>

  <div class="field row">
    <div class='col-sm-2'>
      <%= form.label :year %>
    </div>
    <div class='col-sm-10'>
      <%= form.text_field :year, id: :building_year %>
    </div>
  </div>

  <div class="field row">
    <div class='col-sm-2'>
      <%= form.label :address1 %>
    </div>
    <div class='col-sm-10'>
      <%= form.text_field :address1, id: :building_address1 %>
    </div>
  </div>

  <div class="field row">
    <div class='col-sm-2'>
      <%= form.label :city %>
    </div>
    <div class='col-sm-10'>
      <%= form.text_field :city, id: :building_city %>
    </div>
  </div>

  <div class="field row">
    <div class='col-sm-2'>
      <%= form.label :zip %>
    </div>
    <div class='col-sm-10'>
      <%= form.text_field :zip, id: :building_zip %>
    </div>
  </div>

  <div class="field row">
    <div class='col-sm-2'>
      <%= form.label "Family / Business" %>
    </div>
    <div class='col-sm-10'>
      <%= form.text_field :family, id: :building_family %>
    </div>
  </div>

  <div class="field row">
    <div class='col-sm-2'>
      <%= form.label :building_type %>
    </div>
    <div class='col-sm-10'>
      <%= form.text_field :building_type, id: :building_type %>
    </div>
  </div>

  <div class="field row">
    <div class='col-sm-2'>
      <%= form.label :status %>
    </div>
    <div class='col-sm-10'>
      <%= form.text_field :status, id: :building_status %>
    </div>
  </div>

  <div class="field row">
    <div class='col-sm-2'>
      <%= form.label :source %>
    </div>
    <div class='col-sm-10'>
      <%= form.text_field :source, id: :building_source %>
    </div>
  </div>

  <div class="field row">
    <div class='col-sm-2'>
      GSV
    </div>
    <div class='col-sm-10'>
      <%= form.text_field :gsv, id: :building_gsv %>
    </div>
  </div>

  <div class="field row">
    <div class='col-sm-2'>
      <%= form.label "Notes / Builder / Construction" %>
    </div>
    <div class='col-sm-10'>
      <%= form.text_area :notes, id: :building_notes %>
    </div>
  </div>

  <div class="field row">
    <div class='col-sm-2'>
      Delete Images
    </div>
    <div class="col-sm-10">
      <% @building.images.each do |image| %>
        <div>
          <%= form.check_box "remove_image_#{image.id}" %>
          <img src="<%= image.path %>" class="building-image half-size" />
        </div>
      <% end %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
